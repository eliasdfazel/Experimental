<co.geeksempire.experiment.Views.ViewGroup.NextedConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    tools:context=".Games.GradientGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_initial">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <net.geekstools.imageview.customshapes.VectorShapesImage
        android:id="@+id/selectedGradient"
        android:layout_width="333dp"
        android:layout_height="333dp"
        android:layout_marginTop="37dp"
        android:scaleType="centerCrop"
        android:src="@color/default_color_game"

        apps:shapePath="@string/leafPath"
        apps:shapeScale="37"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintEnd_toEndOf="parent"/>

</co.geeksempire.experiment.Views.ViewGroup.NextedConstraintLayout>