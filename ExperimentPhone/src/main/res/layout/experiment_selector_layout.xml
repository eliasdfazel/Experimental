<co.geeksempire.experiment.Views.ViewGroup.NextedConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    tools:context=".ExperimentSelector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_initial">

    <co.geeksempire.blurry.effect.library.OverlayBlur
        android:layout_width="333dp"
        android:layout_height="333dp"

        apps:realtimeBlurRadius="13dp"
        apps:realtimeBlurGradientType="linearTilt"
        apps:realtimeFirstColor="@color/default_color_transparent"
        apps:realtimeSecondColor="@color/default_color_game_transparent"
        apps:realtimeBlurTopLeft="31dp"
        apps:realtimeBlurTopRight="31dp"
        apps:realtimeBlurBottomLeft="31dp"
        apps:realtimeBlurBottomRight="31dp"
        apps:realtimeShapePath="@string/leafPath"
        apps:realtimeScaleAmount="37"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintBottom_toBottomOf="parent"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintEnd_toEndOf="parent"/>

</co.geeksempire.experiment.Views.ViewGroup.NextedConstraintLayout>