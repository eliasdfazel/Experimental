<co.geeksempire.experiment.Views.ViewGroup.NextedConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    tools:context=".ExperimentSelector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_initial">

    <co.geeksempire.sachiel.signals.administrators.Utils.Views.Scrolls.NextedRecyclerView
        android:id="@+id/curvedRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginHorizontal="19dp"
        android:layout_marginVertical="37dp"
        android:background="@color/default_color_dark"

        apps:layout_constraintTop_toTopOf="parent"/>

    <co.geeksempire.sachiel.signals.administrators.Utils.Views.Scrolls.NextedRecyclerView
        android:id="@+id/sizedRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginHorizontal="19dp"
        android:layout_marginVertical="37dp"
        android:background="@color/default_color_dark"

        apps:layout_constraintTop_toBottomOf="@id/curvedRecyclerView"/>

</co.geeksempire.experiment.Views.ViewGroup.NextedConstraintLayout>